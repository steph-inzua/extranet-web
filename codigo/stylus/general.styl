[data-tooltip]:before 
	position absolute
	bottom 160%
	left 50%
	margin-bottom 5px
	
	padding 4px 10px
	width auto
	border-radius 3px
	background-color rgba(0,0,0,.8)
	color #fff
	content attr(data-tooltip)
	text-align center
	transform translateX(-50%)
	line-height 1.2
	transition all .4s

[data-tooltip]:after 
	position absolute
	bottom 160%
	left 50%
	margin-left -5px
	width 0
	border-top 5px solid #000
	border-top 5px solid rgba(0,0,0,.8)
	border-right 5px solid transparent
	border-left 5px solid transparent
	content " "
	font-size 0
	line-height 0
	transition all .4s

[data-tooltip]:hover:before,
[data-tooltip]:hover:after 
	visibility visible
	opacity 1
	bottom 145%
